---
import Layout from '../layouts/layout.astro';

const isEnglish = Astro.url.pathname.startsWith('/en');
const homeLink = isEnglish ? '/en/' : '/';

const content = {
  sr: {
    title: 'Stranica nije pronađena 404 - Menjačnica Genes',
    description: 'Stranica koju tražite ne postoji ili je premeštena.',
    lang: 'sr' as const,
    code: '404',
    heading: 'Stranica nije pronađena',
    message: 'Izgleda da stranica koju tražite ne postoji ili je premeštena.',
    buttonText: 'Vrati se na početnu stranu',
  },
  en: {
    title: 'Page Not Found 404 - Genes Exchange',
    description: 'The page you are looking for does not exist or has been moved.',
    lang: 'en' as const,
    code: '404',
    heading: 'Page Not Found',
    message: 'It looks like the page you are looking for does not exist or has been moved.',
    buttonText: 'Back to Home',
  },
};

const currentContent = isEnglish ? content.en : content.sr;
---

<Layout
  title={currentContent.title}
  description={currentContent.description}
  lang={currentContent.lang}
  isErrorPage={true}
>
  <section class="error">
    <div class="error__container container">
      <h1 class="error__code rw-200-800">{currentContent.code}</h1>
      <h2 class="error__title rw-48-600">{currentContent.heading}</h2>
      <p class="error__description rw-32-500">
        {currentContent.message}
      </p>
      <a href={homeLink} class="error__back-link btn-primary rw-24-500" data-svg="arrow-right"
        >{currentContent.buttonText}</a
      >
    </div>
  </section>
</Layout>
