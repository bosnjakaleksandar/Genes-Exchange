---
import arrowRightSvg from '../svg/arrow-right.svg?raw';
import caretDownSvg from '../svg/caret-down.svg?raw';
import clockSvg from '../svg/clock.svg?raw';
import mailboxSvg from '../svg/mailbox.svg?raw';
import mapPinSvg from '../svg/map-pin.svg?raw';
import Plus from '../svg/plus.svg?raw';

export interface Props {
  name: 'arrow-right' | 'caret-down' | 'clock' | 'mailbox' | 'map-pin' | 'plus';
  class?: string;
}

const { name, class: className } = Astro.props;

const svgs = {
  'arrow-right': arrowRightSvg,
  'caret-down': caretDownSvg,
  clock: clockSvg,
  mailbox: mailboxSvg,
  'map-pin': mapPinSvg,
  'plus': Plus,
};
---

<span class={className} set:html={svgs[name]} />
