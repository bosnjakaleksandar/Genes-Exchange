# Security and Performance Headers for Menjaƒçnica Genes

/*
  # Security Headers
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
  
  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: blob:; font-src 'self' data:; connect-src 'self' https://www.google-analytics.com; frame-src 'self' https://www.google.com; object-src 'none'
  
  # Cache Control
  Cache-Control: public, max-age=31536000, immutable

# Preload critical resources handled by Astro automatically
# Removed hardcoded preload links as they reference stale hashes

# Cache for images
/images/*
  Cache-Control: public, max-age=31536000, immutable

# Cache for fonts with preload
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  
/_astro/*.ttf
  Content-Type: font/ttf
  Cache-Control: public, max-age=31536000, immutable
  
/_astro/*.woff2
  Content-Type: font/woff2
  Cache-Control: public, max-age=31536000, immutable

/_astro/*.css
  Content-Type: text/css; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

/_astro/styles.css
  Content-Type: text/css; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable

# No cache for API
/api/*
  Cache-Control: no-store, no-cache, must-revalidate
  
# HTML files
/*.html
  Cache-Control: public, max-age=0, must-revalidate
